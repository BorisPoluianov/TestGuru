<div class="row">
  <div class="col col-mb-4">

    <%= form_with model: [:admin, @badge], local: true do |form| %>
      <%= render 'shared/errors', resource: @badge %>

      <div class="form-group">
      <p>
        <%= form.label :image %>
        <%= form.text_field :image, class: 'form-control'  %>
      </p>

      <p>
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control'  %>
      </p>

      <p>
        <%= form.label :rule %>
        <%= form.select :rule,
          options_for_select(Badge::RULES, selected: @badge.rule),
          { prompt: true }, { class: 'form-control' } %>
      </p>

      <p>
        <%= form.label :rule_parameter %>
        <%= form.text_field :rule_parameter, class: 'form-control'  %>
      </p>

      <%= form.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
    <%= link_to t('back'), admin_tests_path %>
  </div>
</div>
