<h3 class="mb-4"><%= t('.header') %>: <%= @test.title %></h3>
<h4><%= t('.category') %>: <%= @test.category.title %>, <%= t('.level') %>: <%= @test.level %></h4>

<div class="mb-4">
  <table>
    <thead>
      <tr>
        <th><%= t('.question') %></th>
        <th colspan="3"><%= t('.actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @test.questions %>
    </tbody>
  </table>

  <%= link_to t('.new_question'), new_admin_test_question_path(@test) %>
</div>


<%= link_to t('back'), admin_tests_path %> |
