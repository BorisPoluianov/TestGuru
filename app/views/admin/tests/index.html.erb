<%= render 'shared/errors', resource: @test %>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th class="sort-by-title pointer">
        <%= t('.test') %>
        <%= octicon 'arrow-up', class: 'text-success' %>
        <%= octicon 'arrow-down', class: 'text-success' %>
      </th>
      <th><%= t('.questions') %></th>
      <th><%= t('.level') %></th>
      <th><%= t('.category') %></th>
      <th><%= t('.duration') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @tests %>
  </tbody>
</table>

<p>
  <%= link_to t('.new_test'), new_admin_test_path, class: 'btn btn-primary mt-2' %>
</p>
